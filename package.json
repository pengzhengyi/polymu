{
  "name": "@pengzhengyi/polymu",
  "version": "1.0.0",
  "description": "Browser extension to improve reading experience",
  "main": "./dist/polymu.js",
  "module": "./src/polymu.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "build-dev": "webpack --config webpack.config.js --mode development",
    "build-prod": "webpack --config webpack.config.js --mode production",
    "build-dev.watch": "npm run build-dev -- --watch",
    "build-prod.watch": "npm run build-prod -- --watch",
    "build.watch": "npm run build -- --watch",
    "build": "npm run format && npm run lint && npm run test && npm run build-prod",
    "test": "jest",
    "test.watch": "npm run test -- --watch",
    "lint": "eslint ./src --color --fix --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write src/**/*.ts",
    "format.check": "prettier --check src/**/*.ts",
    "format.list-different": "prettier --list-different src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:pengzhengyi/polymu.git"
  },
  "keywords": [
    "scrolling",
    "HTML",
    "partial rendering",
    "infinite scrolling"
  ],
  "author": "pengzhengyi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pengzhengyi/polymu/issues"
  },
  "homepage": "https://github.com/pengzhengyi/polymu#readme",
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-jest": "^24.3.5",
    "husky": "^6.0.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.2.0",
    "ts-loader": "^9.0.2",
    "typescript": "^4.0.2",
    "webpack": "^5.34.0",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "@types/uuid": "^8.3.0",
    "uuid": "^8.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.ts": "prettier --write"
  }
}
